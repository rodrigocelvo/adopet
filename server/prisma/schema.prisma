datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  phone     String
  city      String
  uf        String
  avatarUrl String?
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Pet       Pet[]
}

model Pet {
  id          String  @id @default(cuid())
  name        String
  weight      String
  birthDate   String
  sex         String
  breed       String
  tags        String
  description String  @db.VarChar(3000)
  imgUrl      String?
  category    String
  adopted     Boolean
  adoptedBy   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}

model RevokedToken {
  id    String @id @default(cuid())
  token String @unique @db.VarChar(500)

  revokedAt DateTime @default(now())
}
