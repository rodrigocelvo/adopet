generator client {
  provider = "prisma-client-js"
}

// generator erd {
//   erDebug  = true
//   provider = "prisma-erd-generator"
// }

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id
  user_name       String
  user_email      String  @unique
  user_phone      String
  user_city       String
  user_city_uf    String
  user_avatar_url String?

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  Pet        Pet[]
}

model Pet {
  id              String  @id @default(cuid())
  pet_name        String
  pet_weight      String
  pet_birth_date  String
  pet_sex         String
  pet_breed       String
  pet_tags        String
  pet_description String
  pet_img_url     String
  pet_category    String
  pet_adopted     Boolean
  pet_adopted_by  String?

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}
